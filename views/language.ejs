<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Language Selection</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #f6f8fb 0%, #e9ecf1 100%);
    }
    .lang-btn {
      transition: all 0.6s cubic-bezier(0.165, 0.84, 0.44, 1);
      position: relative;
      overflow: hidden;
      background: linear-gradient(145deg, #ffffff, #f5f7fa);
      box-shadow: 5px 5px 10px #d1d9e6, -5px -5px 10px #ffffff;
      will-change: transform;
    }
    .lang-btn:hover {
      transform: translateY(-3px) scale(1.03);
      box-shadow: 0 15px 30px rgba(0,0,0,0.08);
      background: linear-gradient(145deg, #e0e7ff, #f3f4f6);
    }
    .lang-btn:active {
      transform: translateY(1px) scale(0.98);
      transition: all 0.1s ease;
    }
    .container-shadow {
      box-shadow: 20px 20px 60px #d1d9e6, -20px -20px 60px #ffffff;
    }
    .welcome-text {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 0;
      transition: opacity 0.5s ease, transform 0.4s ease;
      transform: translateY(10px);
    }
    .lang-btn:hover .welcome-text {
      opacity: 1;
      transform: translateY(0);
    }
    .lang-text {
      transition: opacity 0.5s ease, transform 0.4s ease;
    }
    .lang-btn:hover .lang-text {
      opacity: 0;
      transform: translateY(-10px);
    }
    /* New fade-in animation */
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .fade-in {
      opacity: 0; /* ensure elements are hidden initially */
      animation: fadeIn 1s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
    }
    .delay-1 { animation-delay: 0.3s; }
    .delay-2 { animation-delay: 0.6s; }
    .delay-3 { animation-delay: 0.9s; }
  </style>
</head>
<body class="min-h-screen flex items-center justify-center px-4 py-8">
  <!-- Add fade-in to the overall container -->
  <div class="bg-white container-shadow rounded-2xl p-12 w-full max-w-5xl backdrop-blur-sm bg-white/90 fade-in">
    <!-- Logo and Header with fade-in and delay -->
    <div class="text-center mb-10 fade-in delay-1">
      <img src="/img/logo.png" alt="Logo" class="mx-auto mb-8 mt-4 transform hover:scale-105 transition-transform duration-300" style="width: 250px; height: auto;">
      <h1 class="text-3xl font-bold text-black mb-3">
        Select your Preferred Language
      </h1>
      <p class="text-lg text-gray-600 mt-2">वेबसाइट में प्रवेश करने के लिए अपनी पसंदीदा भाषा का चयन करें</p>
    </div>

    <!-- Language Buttons Grid with fade-in on each button -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center fade-in delay-2">
      <% const languages = [
        { code: 'en', name: 'English', welcome: 'Welcome' },
        { code: 'hi', name: 'हिन्दी', welcome: 'स्वागत है' },
        { code: 'mr', name: 'मराठी', welcome: 'स्वागत आहे' },
        { code: 'bn', name: 'বাংলা', welcome: 'স্বাগত' },
        { code: 'gu', name: 'ગુજરાતી', welcome: 'સ્વાગત છે' },
        { code: 'ml', name: 'മലയാളം', welcome: 'സ്വാഗതം' },
        { code: 'as', name: 'অসমীয়া', welcome: 'স্বাগতম' },
        { code: 'ta', name: 'தமிழ்', welcome: 'வணக்கம்' },
        { code: 'kn', name: 'ಕನ್ನಡ', welcome: 'ಸ್ವಾಗತ' },
        { code: 'te', name: 'తెలుగు', welcome: 'స్వాగతం' }
      ] %>

      <% languages.forEach((lang, index) => { %>
        <!-- Stagger each form's fade-in via inline animation-delay -->
        <form action="/set-language" method="POST" class="w-full fade-in" style="animation-delay: <%= 0.3 + index * 0.2 %>s">
          <input type="hidden" name="language" value="<%= lang.code %>">
          <button type="submit" class="lang-btn w-full py-4 px-6 rounded-xl text-gray-700 font-medium relative">
            <span class="lang-text relative z-10 transition-opacity duration-300"><%= lang.name %></span>
            <span class="welcome-text text-indigo-600 font-semibold"><%= lang.welcome %></span>
          </button>
        </form>
      <% }); %>
    </div>
  </div>

  <script>
    // Add ripple effect to buttons
    document.querySelectorAll('.lang-btn').forEach(button => {
      button.addEventListener('click', function(e) {
        const rect = this.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        
        const ripple = document.createElement('span');
        ripple.style.left = `${x}px`;
        ripple.style.top = `${y}px`;
        ripple.className = 'ripple';
        
        this.appendChild(ripple);
        setTimeout(() => ripple.remove(), 600);
      });
    });
  </script>
</body>
</html>
